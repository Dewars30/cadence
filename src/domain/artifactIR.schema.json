{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cadence ArtifactIR",
  "type": "object",
  "required": ["artifact", "blocks"],
  "properties": {
    "artifact": {
      "type": "object",
      "required": ["id", "type", "title", "template"],
      "properties": {
        "id": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["report", "prd", "deck", "memo", "custom"]
        },
        "title": { "type": "string" },
        "template": { "type": "string" }
      },
      "additionalProperties": false
    },
    "blocks": {
      "type": "array",
      "items": { "$ref": "#/definitions/block" }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "path"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "path": { "type": "string" },
          "alt": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "styles": {
      "type": "object"
    }
  },
  "definitions": {
    "block": {
      "oneOf": [
        { "$ref": "#/definitions/titlePage" },
        { "$ref": "#/definitions/heading" },
        { "$ref": "#/definitions/paragraph" },
        { "$ref": "#/definitions/bullets" },
        { "$ref": "#/definitions/numbered" },
        { "$ref": "#/definitions/table" },
        { "$ref": "#/definitions/pageBreak" }
      ]
    },
    "titlePage": {
      "type": "object",
      "required": ["id", "type", "title"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "titlePage" },
        "title": { "type": "string" },
        "subtitle": { "type": "string" }
      },
      "additionalProperties": false
    },
    "heading": {
      "type": "object",
      "required": ["id", "type", "level", "text"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "heading" },
        "level": { "type": "integer", "minimum": 1, "maximum": 6 },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },
    "paragraph": {
      "type": "object",
      "required": ["id", "type", "text"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "paragraph" },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },
    "bullets": {
      "type": "object",
      "required": ["id", "type", "items"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "bullets" },
        "items": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "numbered": {
      "type": "object",
      "required": ["id", "type", "items"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "numbered" },
        "items": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "table": {
      "type": "object",
      "required": ["id", "type", "columns", "rows"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "table" },
        "columns": {
          "type": "array",
          "items": { "type": "string" }
        },
        "rows": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },
    "pageBreak": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "pageBreak" }
      },
      "additionalProperties": false
    }
  }
}
